<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main">
    <RelativeLayout
        style="@style/Div"
        android:id="@+id/relativeLayout">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hey,"
            android:textAppearance="@style/TitleText" />

        <TextView
            android:id="@+id/lblMainUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text=" User"
            android:textAppearance="@style/TitleTextAccent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Have a code?"
            android:textAppearance="@style/Text.Hint"
            android:layout_below="@id/textView2"
            android:layout_marginTop="85dp"
            />
    </RelativeLayout>

    <Button
        android:id="@+id/btnJoinGame"
        style="@style/Btn.Big.Accent"
        android:text="Join a Game"
        android:layout_marginTop="170dp"
        />


    <RelativeLayout
        android:id="@+id/divLblHint"
        android:layout_below="@id/btnJoinGame"
        android:paddingBottom="2dp"
        android:paddingTop="15dp"
        style="@style/Div"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make them come to you"
            android:layout_marginTop="10dp"
            android:textAppearance="@style/Text.Hint"
            />
    </RelativeLayout>
    <Button
        android:id="@+id/btnCreateGame"
        style="@style/Btn.Big"
        android:layout_below="@id/divLblHint"
        android:text="Create a Game"
        />
</RelativeLayout>


